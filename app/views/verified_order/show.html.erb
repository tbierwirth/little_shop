<h1>Order Info</h1>
<% grand_total = 0 %>
<section id='shipping'>
  <%= form_tag "/merchants/#{@order.id}", method: :patch do %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @order.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, @order.address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @order.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @order.state %>

    <%= label_tag :zip %>
    <%= text_field_tag :zip, @order.zip %>

    <%= submit_tag 'Update Order' %>
  <% end %>
  <%= button_to 'Delete Order', "/verified_order/#{@order.id}", class: "btn btn-dark btn-sm", method: :delete %>
</section>
