<h2>New Item</h2>
<%= form_tag "/merchants/#{@merchant.id}/items" do %>
<div class="form-group">
  <%= label_tag :name, "Name:" %>
  <%= text_field_tag :name, nil, class:"form-control col-md-4" %>
</div>
<div class="form-group">
  <%= label_tag :description, "Description:" %>
  <%= text_field_tag :description, nil, class:"form-control col-md-4" %>
</div>
<div class="form-group">
  <%= label_tag :price, "Price:" %>
  <%= text_field_tag :price, nil, class:"form-control col-md-4" %>
</div>
<div class="form-group">
  <%= label_tag :image, "Image URL:" %>
  <%= text_field_tag :image, nil, class:"form-control col-md-4" %>
</div>
<div class="form-group">
  <%= label_tag :inventory, "Inventory:" %>
  <%= text_field_tag :inventory, nil, class:"form-control col-md-4" %>
</div>
  <%= submit_tag 'Create Item', class: "btn btn-dark btn-sm" %>
<% end %>
